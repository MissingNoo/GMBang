    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",            
            "request": "launch",
            "name": "Launch Program",
            "runtimeExecutable": "/usr/bin/node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/../GMBang-Server/server.js"
        },
        {
            "type": "node", 
            "request": "launch",
            "name": "Run",
            "runtimeExecutable": "${workspaceFolder}/.vscode/Igor.sh",
            "program": "${workspaceFolder}/tmp/build.bff",
        },
        {
            "type": "node", 
            "request": "launch",
            "name": "ReRun",
            "runtimeExecutable": "${workspaceFolder}/.vscode/IgorRepeat.sh",
            "program": "${workspaceFolder}/tmp/rerun.bff",
        }
    ]
}